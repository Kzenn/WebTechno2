{
  "compileOnSave": true,
  "compilerOptions": {
  "outDir": "./dist",
  "moduleResolution": "node",
  "target": "es2015",                          
  "module": "commonjs",                     
  "strict": true,                          
  "esModuleInterop": true,
                    
    "forceConsistentCasingInFileNames": true  /* Disallow inconsistently-cased references to the same file. */
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
